# DocIntel Enterprise - Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# MongoDB Atlas (Shared)
# ================================
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net
MONGODB_DATABASE=docurepo

# ================================
# OpenAI (Embeddings & LLM)
# ================================
OPENAI_API_KEY=sk-...

# ================================
# Google Gemini (Agents)
# ================================
GOOGLE_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# ================================
# AWS Bedrock (Optional)
# ================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...

# ================================
# LlamaParse (Document Processing)
# ================================
LLAMA_CLOUD_API_KEY=...

# ================================
# DigitalOcean Spaces (Document Storage)
# ================================
DO_SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
DO_SPACES_REGION=sgp1
DO_SPACES_ACCESS_KEY_ID=...
DO_SPACES_SECRET_ACCESS_KEY=...
DO_SPACES_BUCKET=your-bucket-name

# ================================
# Temporal (Workflow Engine)
# ================================
TEMPORAL_ADDRESS=your-temporal-cloud.tmprl.cloud:7233
TEMPORAL_NAMESPACE=your-namespace
TEMPORAL_API_KEY=...
TEMPORAL_TASK_QUEUE=document-processing

# ================================
# Backend Integration
# ================================
DOCS_BACKEND_API_KEY=...
DOCS_BACKEND_URL=https://your-backend.com
DOCUMENT_WEBHOOK_API_KEY=...

# ================================
# Observability
# ================================
LOG_LEVEL=INFO
ENABLE_TRACING=true
ENABLE_METRICS=true
GRAFANA_PASSWORD=admin

# ================================
# Optional: Google Search
# ================================
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
