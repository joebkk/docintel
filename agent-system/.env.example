# RAG Backend
RAG_API_URL=http://rag-backend:3000
RAG_API_KEY=optional_api_key

# Google Gemini
GOOGLE_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# MongoDB (shared with RAG backend)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net
MONGODB_DATABASE=docurepo

# OpenAI (for embeddings in memory bank)
OPENAI_API_KEY=sk-...

# Observability
LOG_LEVEL=INFO
ENABLE_TRACING=true
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Agent Configuration
MAX_ITERATIONS=3
QUALITY_THRESHOLD=0.85
CONTEXT_MAX_LENGTH=100000

# Session Storage
SESSION_STORAGE_PATH=./sessions
MEMORY_BANK_COLLECTION=agent_memory

# Google Search (optional)
GOOGLE_SEARCH_API_KEY=optional
GOOGLE_SEARCH_ENGINE_ID=optional
